<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryApp" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/teal_300</item>
        <item name="colorPrimaryVariant">@color/teal_400</item>
        <item name="colorSecondary">@color/red_300</item>
        <item name="colorSecondaryVariant">@color/red_400</item>
        <item name="errorTextColor">@color/red_500</item>
        <item name="android:textColor">@color/black</item>

        <!-- font setting -->
        <item name="android:fontFamily">@font/poppins</item>

        <!-- Animation -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>

    </style>

    <style name="Theme.StoryApp" parent="Base.Theme.StoryApp"/>
</resources>