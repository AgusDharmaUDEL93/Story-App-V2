<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.welcome.WelcomeActivity"
        >
    <ImageView
            android:id="@+id/image_welcome_illustration"
            android:contentDescription="@string/welcome_page_illustration"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:src="@drawable/image_welcome_illustration"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_welcome_title"
            />

    <TextView
            android:id="@+id/text_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_welcome_illustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_welcome_body"
            android:text="@string/welcome_title"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="28sp"
            android:layout_marginHorizontal="5dp"
            />

    <TextView
            android:id="@+id/text_welcome_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_welcome_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/welcome_body"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginHorizontal="32dp"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginVertical="15dp"
            app:layout_constraintBottom_toTopOf="@id/button_welcome_login"
            />
    <com.udeldev.storyapp.component.button.PrimaryButton
            android:id="@+id/button_welcome_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_login"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_body"
            app:layout_constraintBottom_toTopOf="@+id/button_welcome_register"

            />
    <com.udeldev.storyapp.component.button.OutlinedSecondaryButton
            android:id="@+id/button_welcome_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_register"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/button_welcome_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            />




</androidx.constraintlayout.widget.ConstraintLayout>